<Window x:Class="SPGen2010.Components.Connectors.WConnectorBrowser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Instance Connector Browser" Height="400" Width="640">
    <Grid>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="60"></Setter>
                </Style>
            </StackPanel.Resources>
            <Button Name="_MsSql_Instance_UP_Connect_Button" Content="Connect to MsSql (Instance, Username Password Auth)" Click="_MsSql_Instance_UP_Connect_Button_Click"></Button>
            <Button Name="_MsSql_Instance_TA_Connect_Button" Content="Connect to MsSql (Instance, Trusted Connect)" Click="_MsSql_Instance_TA_Connect_Button_Click"></Button>
            <Button Name="_MsSql_DBFile_Connect_Button" Content="Connect to MsSql (File Location)" Click="_MsSql_DBFile_Connect_Button_Click"></Button>
            <Button Name="_SqLite_Connect_Button" Content="Connect to SqLite (coming...)" IsEnabled="False"></Button>
            <Button Name="_Oracle_Connect_Button" Content="Connect to Oracle (coming....)" IsEnabled="False"></Button>
            <Button Name="_MySql_Connect_Button" Content="Connect to MySql (coming...)" IsEnabled="False"></Button>
        </StackPanel>
    </Grid>
</Window>
